NODE_ENV=production
PORT=5000

# Database (PostgreSQL gerenciado do DigitalOcean)
# Formato: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://novaguardian:your-secure-password@your-db-host:25060/novaguardian

# Session Secret (gere com: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=your-very-long-random-secret-key-here-minimum-32-characters

# Email (SendGrid)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# OAuth (opcional se usar Google/GitHub login)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
